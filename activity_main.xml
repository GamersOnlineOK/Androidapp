<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:layout_gravity="center"
    tools:context=".MainActivity">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvingreso"
        android:text="Ingresar numero"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:gravity="center_horizontal"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_adicion1"
        android:gravity="center_horizontal"
        android:layout_below="@+id/tvingreso"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_egreso"
        android:text="Ingresar numero"
        android:layout_below="@+id/et_adicion1"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:gravity="center_horizontal"
    />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_adicion2"
        android:gravity="center_horizontal"
        android:layout_below="@+id/tv_egreso"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sumar"
        android:layout_below="@+id/et_adicion2"
        android:gravity="center_horizontal"
        android:id="@+id/btnsumar"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:id="@+id/tv_resultado"
        android:layout_below="@+id/btnsumar"
        />
</RelativeLayout>

</LinearLayout>
